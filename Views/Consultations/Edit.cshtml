@model CabinetMedical.Models.Consultation

@{
    ViewBag.Title = "Modifier la Consultation";
}

<div class="container-fluid">

    <h1 class="h3 mb-4 text-gray-800">
        <i class="fas fa-edit text-warning"></i> Modification de la Consultation
    </h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.IdConsultation)

        <div class="card shadow mb-4 border-left-warning">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Édition du dossier médical</h6>
                <span class="small text-gray-500">Dossier N° @Model.IdConsultation</span>
            </div>

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-lg-4 border-right">
                        <h5 class="text-gray-900 mb-3"><i class="fas fa-info-circle text-gray-400"></i> Infos Générales</h5>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DateConsultation, "Date de la consultation", htmlAttributes: new { @class = "control-label font-weight-bold" })
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                </div>
                                @Html.EditorFor(model => model.DateConsultation, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.DateConsultation, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">Patient</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user-injured"></i></span>
                                </div>
                                @Html.DropDownList("IdPatient", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.IdPatient, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">Médecin</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user-md"></i></span>
                                </div>
                                @Html.DropDownList("IdMedecin", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.IdMedecin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-lg-8 pl-lg-4">
                        <h5 class="text-gray-900 mb-3"><i class="fas fa-file-medical-alt text-gray-400"></i> Rapport Médical</h5>

                        <div class="form-group">
                            <label class="text-danger font-weight-bold"><i class="fas fa-stethoscope"></i> Diagnostic</label>
                            @Html.TextAreaFor(model => model.Diagnostic, new { @class = "form-control border-left-danger", @rows = "2", @placeholder = "Quel est le problème du patient ?" })
                            @Html.ValidationMessageFor(model => model.Diagnostic, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="text-success font-weight-bold"><i class="fas fa-pills"></i> Traitement Prescrit</label>
                            @Html.TextAreaFor(model => model.Traitement, new { @class = "form-control border-left-success", @rows = "3", @placeholder = "Médicaments, posologie..." })
                            @Html.ValidationMessageFor(model => model.Traitement, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="text-warning font-weight-bold"><i class="fas fa-eye"></i> Observations / Remarques</label>
                            @Html.TextAreaFor(model => model.Observations, new { @class = "form-control border-left-warning", @rows = "2", @placeholder = "Notes supplémentaires..." })
                            @Html.ValidationMessageFor(model => model.Observations, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light text-right">
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-icon-split">
                    <span class="icon text-white-50"><i class="fas fa-arrow-left"></i></span>
                    <span class="text">Annuler</span>
                </a>
                <button type="submit" class="btn btn-warning btn-icon-split ml-2">
                    <span class="icon text-white-50"><i class="fas fa-save"></i></span>
                    <span class="text">Enregistrer les modifications</span>
                </button>
            </div>
        </div>
    }
</div>