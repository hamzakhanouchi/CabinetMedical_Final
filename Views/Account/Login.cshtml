@model CabinetMedical.ViewModels.LoginViewModel
@{
    Layout = null; /* On n'utilise pas le Layout standard pour avoir une page pleine */
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Connexion - MediCare Pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        /* --- 1. ARRIÈRE-PLAN --- */
        body {
            font-family: 'Poppins', sans-serif;
            /* Image de fond (Hôpital moderne) avec un filtre bleu sombre */
            background: linear-gradient(rgba(10, 25, 47, 0.7), rgba(10, 25, 47, 0.8)), url('https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?q=80&w=2053&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* --- 2. LA CARTE PRINCIPALE --- */
        .login-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            overflow: hidden;
            width: 900px;
            max-width: 95%;
            min-height: 550px;
            display: flex;
        }

        /* --- 3. PARTIE GAUCHE (INFO) --- */
        .login-left {
            flex: 1;
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
        }

            /* Petit effet de cercle déco */
            .login-left::before {
                content: '';
                position: absolute;
                top: -50px;
                left: -50px;
                width: 150px;
                height: 150px;
                background: rgba(255,255,255,0.1);
                border-radius: 50%;
            }

        .brand-title {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .brand-subtitle {
            font-size: 0.9rem;
            opacity: 0.8;
            margin-bottom: 30px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            font-size: 0.9rem;
        }

        .feature-icon {
            background: rgba(255,255,255,0.2);
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }

        /* --- 4. PARTIE DROITE (FORMULAIRE) --- */
        .login-right {
            flex: 1;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: #ffffff;
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-icon-top {
            font-size: 3rem;
            color: #4e73df;
            margin-bottom: 10px;
        }

        /* Champs de saisie modernes (Pill Shape) */
        .form-control {
            border-radius: 50px;
            padding: 12px 20px;
            background-color: #f8f9fc;
            border: 1px solid #e3e6f0;
            font-size: 0.9rem;
        }

            .form-control:focus {
                background-color: #fff;
                box-shadow: 0 0 0 3px rgba(78, 115, 223, 0.25);
                border-color: #4e73df;
            }

        .input-group-text {
            border-radius: 50px 0 0 50px;
            background: #f8f9fc;
            border: 1px solid #e3e6f0;
            border-right: none;
            color: #8898aa;
            padding-left: 20px;
        }
        /* Ajustement si icône présente */
        .input-group .form-control {
            border-left: none;
            border-radius: 0 50px 50px 0;
        }

        /* Bouton dégradé */
        .btn-login {
            border-radius: 50px;
            background: linear-gradient(to right, #4e73df, #224abe);
            border: none;
            color: white;
            font-weight: 600;
            padding: 12px;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(78, 115, 223, 0.4);
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(78, 115, 223, 0.5);
            }

        /* Responsive Mobile */
        @@media (max-width: 768px) {
            .login-card {
                flex-direction: column;
                height: auto;
                margin: 20px;
            }

            .login-left {
                padding: 30px;
                text-align: center;
            }

            .feature-item {
                justify-content: center;
            }

            .feature-icon {
                margin-right: 10px;
            }
        }
    </style>
</head>
<body>

    <div class="login-card">

        <div class="login-left">
            <div class="mb-4">
                <i class="fas fa-heartbeat fa-3x mb-2"></i>
                <h1 class="brand-title">MediCare Pro</h1>
                <p class="brand-subtitle">La solution moderne et sécurisée pour la gestion intégrale de votre cabinet médical.</p>
            </div>

            <div class="features-list">
                <div class="feature-item">
                    <div class="feature-icon"><i class="fas fa-users"></i></div>
                    <span>Gestion complète des Patients</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon"><i class="fas fa-calendar-check"></i></div>
                    <span>Planification intelligente des RDV</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon"><i class="fas fa-file-medical"></i></div>
                    <span>Dossiers Médicaux & Historique</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon"><i class="fas fa-print"></i></div>
                    <span>Impression d'Ordonnances</span>
                </div>
            </div>

            <div class="mt-auto text-center small opacity-75">
                &copy; 2025 - MediCare Pro System
            </div>
        </div>

        <div class="login-right">
            <div class="login-header">
                <i class="fas fa-user-doctor login-icon-top"></i>
                <h2 class="font-weight-bold">Bienvenue</h2>
                <p class="text-muted small">Veuillez vous identifier pour accéder à l'espace.</p>
            </div>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "user", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-center small mb-3" })

                <div class="mb-3">
                    <label class="form-label small font-weight-bold text-gray-600">Email Professionnel</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "dr.nom@cabinet.com" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-4">
                    <label class="form-label small font-weight-bold text-gray-600">Mot de passe</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "••••••••" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                </div>

                <button type="submit" class="btn btn-login btn-block">
                    Se connecter <i class="fas fa-arrow-right ml-2"></i>
                </button>

                <div class="text-center mt-4">
                    <a class="small text-muted" href="#">Problème de connexion ? Contactez l'administrateur.</a>
                </div>
            }
        </div>
    </div>

</body>
</html>