@model CabinetMedical.ViewModels.LoginVM

@{
    Layout = null; /* Pas de menu sur la page de login */
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion - MediCare Pro</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            overflow: hidden; /* Empêche le scroll */
        }

        .login-container {
            height: 100vh;
            display: flex;
        }

        /* PARTIE GAUCHE (INFO PROJET) */
        .left-panel {
            background: linear-gradient(135deg, rgba(78, 115, 223, 0.9), rgba(34, 74, 190, 0.9)), url('https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            width: 55%;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 50px 80px;
            position: relative;
        }

        .project-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .feature-list {
            list-style: none;
            padding: 0;
            font-size: 1.2rem;
            margin-top: 30px;
        }

            .feature-list li {
                margin-bottom: 15px;
                display: flex;
                align-items: center;
            }

            .feature-list i {
                background: rgba(255,255,255,0.2);
                padding: 10px;
                border-radius: 50%;
                margin-right: 15px;
                width: 40px;
                height: 40px;
                display: flex;
                justify-content: center;
                align-items: center;
            }

        /* PARTIE DROITE (FORMULAIRE) */
        .right-panel {
            width: 45%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
        }

        .form-control {
            height: 50px;
            border-radius: 30px;
            padding-left: 20px;
            background-color: #f8f9fc;
            border: 1px solid #e3e6f0;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #4e73df;
                background-color: #fff;
            }

        .btn-login {
            border-radius: 30px;
            height: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            background: linear-gradient(to right, #4e73df, #224abe);
            border: none;
            transition: transform 0.2s;
        }

            .btn-login:hover {
                transform: scale(1.02);
                background: linear-gradient(to right, #224abe, #4e73df);
            }

        .input-group-text {
            background: none;
            border: none;
            position: absolute;
            right: 15px;
            top: 15px;
            color: #aaa;
            z-index: 10;
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        /* MOBILE */
        @@media (max-width: 768px) {
            .left-panel {
                display: none;
            }

            .right-panel {
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <div class="login-container">

        <div class="left-panel">
            <div>
                <h1 class="project-title">MediCare Pro</h1>
                <p class="lead">La solution moderne et sécurisée pour la gestion intégrale de votre cabinet médical.</p>

                <ul class="feature-list">
                    <li><i class="fa-solid fa-users"></i> Gestion complète des Patients</li>
                    <li><i class="fa-solid fa-calendar-check"></i> Planification des Rendez-vous</li>
                    <li><i class="fa-solid fa-file-medical"></i> Dossiers Médicaux & Historique</li>
                    <li><i class="fa-solid fa-print"></i> Impression d'Ordonnances</li>
                </ul>

                <div style="margin-top: 50px; opacity: 0.7; font-size: 0.9rem;">
                    &copy; @DateTime.Now.Year - Projet de Fin d'Études / Stage<br>
                    Développé avec ASP.NET MVC 5
                </div>
            </div>
        </div>

        <div class="right-panel">
            <div class="login-box">
                <div class="text-center mb-5">
                    <i class="fa-solid fa-user-doctor fa-3x text-primary mb-3"></i>
                    <h2 class="font-weight-bold text-dark">Bienvenue</h2>
                    <p class="text-muted">Veuillez vous identifier pour accéder à l'espace.</p>
                </div>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger shadow-sm" role="alert" style="border-radius: 15px;">
                            <i class="fa-solid fa-circle-exclamation"></i> Email ou mot de passe incorrect.
                        </div>
                    }

                    <div class="form-group">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Adresse Email" } })
                        <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small ms-3" })
                    </div>

                    <div class="form-group">
                        @Html.EditorFor(model => model.MotDePasse, new { htmlAttributes = new { @class = "form-control", placeholder = "Mot de passe" } })
                        <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                        @Html.ValidationMessageFor(model => model.MotDePasse, "", new { @class = "text-danger small ms-3" })
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-login shadow">
                            Se connecter <i class="fa-solid fa-arrow-right ms-2"></i>
                        </button>
                    </div>
                }

                <div class="text-center mt-4">
                    <small class="text-muted">Problème de connexion ? Contactez l'administrateur.</small>
                </div>
            </div>
        </div>

    </div>

</body>
</html>