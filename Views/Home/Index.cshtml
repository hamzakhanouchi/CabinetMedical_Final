<div class="row mb-4">

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Patients</div>
                        <div class="h3 mb-0 font-weight-bold text-gray-800">@ViewBag.NombrePatients</div>
                    </div>
                    <div class="col-auto"><i class="fas fa-users fa-2x text-gray-300"></i></div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Patients")" class="card-footer bg-white text-primary text-center small" style="text-decoration:none;">
                Voir la liste <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">RDV Aujourd'hui</div>
                        <div class="h3 mb-0 font-weight-bold text-gray-800">@ViewBag.RdvAujourdhui</div>
                    </div>
                    <div class="col-auto"><i class="fas fa-calendar-day fa-2x text-gray-300"></i></div>
                </div>
            </div>
            <a href="@Url.Action("Index", "RendezVous")" class="card-footer bg-white text-success text-center small" style="text-decoration:none;">
                Voir le planning <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    @if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin")
    {
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Médecins
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.NombreMedecins
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-doctor fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white text-info text-center small">Équipe Médicale</div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Secrétaires
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.NombreSecretaires
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-nurse fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white text-warning text-center small">Administration</div>
            </div>
        </div>
    }
</div>

<div class="row mb-4">
    <div class="col-12">
        <a href="@Url.Action("Create", "Patients")" class="btn btn-primary shadow-sm">
            <i class="fa-solid fa-user-plus"></i> Nouveau Patient
        </a>
    </div>
</div>