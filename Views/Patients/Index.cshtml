@model IEnumerable<CabinetMedical.Models.Patient>

@{
    ViewBag.Title = "Liste des Patients";
}

<h2>Gestion des Patients</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Nouveau Patient
    </a>
</p>

<table class="table table-striped table-hover table-bordered" style="background-color: white; box-shadow: 0 2px 5px rgba(0,0,0,0.05);">
    <thead class="bg-primary" style="color: white;">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nom)</th>
            <th>@Html.DisplayNameFor(model => model.Prenom)</th>
            <th>@Html.DisplayNameFor(model => model.DateNaissance)</th>
            <th>@Html.DisplayNameFor(model => model.Sexe)</th>
            <th>@Html.DisplayNameFor(model => model.Telephone)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.GroupeSanguin)</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                <td>@Html.DisplayFor(modelItem => item.DateNaissance)</td>
                <td>@Html.DisplayFor(modelItem => item.Sexe)</td>
                <td>@Html.DisplayFor(modelItem => item.Telephone)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.GroupeSanguin)</td>
                <td style="white-space:nowrap;">

                    <a href="@Url.Action("Index", "Consultations", new { idPatient = item.IdPatient })" class="btn btn-primary btn-xs" title="Dossier Médical">
                        <i class="fa-solid fa-folder-open"></i> Dossier
                    </a>

                    <a href="@Url.Action("Edit", new { id = item.IdPatient })" class="btn btn-warning btn-xs" title="Modifier">
                        <i class="fa-solid fa-pen"></i>
                    </a>

                    <a href="@Url.Action("Details", new { id = item.IdPatient })" class="btn btn-info btn-xs" title="Détails">
                        <i class="fa-solid fa-eye"></i>
                    </a>

                    @if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin")
                    {
                        <a href="@Url.Action("Delete", new { id = item.IdPatient })" class="btn btn-danger btn-xs" title="Supprimer">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>